@model IEnumerable<PersonalBlog3.Models.Post>
@{
    ViewData["Title"] = "个人博客";
    // 从ViewBag接收控制器传递的数据
    bool isLoggedIn = ViewBag.IsLoggedIn;
    string username = ViewBag.Username;
    string currentCategoryName = ViewBag.CurrentCategoryName;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <!-- 登录信息 -->
        <div class="text-end mb-3">
            @if (isLoggedIn)
            {
                <span>欢迎：@username</span>
                <a href="/Account/Logout" class="ms-2">退出</a>
            }
            else
            {
                <a href="/Account/Login" class="me-2">登录</a>
                <a href="/Account/Register" class="me-2">注册</a>
            }
        </div>

        <!-- 标题 -->
        <h1 class="text-center mb-4">@currentCategoryName</h1>


<!-- 发布新文章按钮：暴力修复版 -->
<div style="text-align:center; margin-bottom:20px; position:relative; z-index:9999;">
    <button type="button" 
            onclick="window.location.href='/Posts/Create';" 
            class="btn btn-primary" 
            style="padding:12px 40px; font-size:18px; cursor:pointer; border:none; background:#0d6efd;">
        发布新文章
    </button>
</div>

<!-- 发布第一篇文章按钮也同步修改 -->
<button onclick="window.location.href='/Posts/Create'" 
        class="btn btn-sm btn-primary mt-2" 
        style="cursor: pointer; z-index: 999;">
    发布第一篇文章
</button>

        <!-- 文章列表 -->
        @if (Model.Any())
        {
            foreach (var post in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text text-muted">
                            分类：@post.Category?.Name | 作者：@post.Author | 发布时间：@post.CreatedTime.ToString("yyyy-MM-dd HH:mm")
                        </p>
                        <p class="card-text">@post.Content</p>
                        <a href="/Home/PostDetail/@post.Id" class="btn btn-danger btn-sm">阅读全文</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center">
                <p>该分类下暂无文章</p>
              <a href="/Posts/Create" 
   onclick="window.location.href='/Posts/Create'; return false;" 
   class="btn btn-sm btn-primary mt-2" 
   style="cursor: pointer;">
    发布第一篇文章
</a>
            </div>
        }

        <!-- 分类栏 -->
        <div class="mt-5">
            <h5>文章分类</h5>
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="/">全部文章</a>
                </li>
                @foreach (var category in ViewBag.Categories)
                {
                    <li class="list-group-item">
                        <a href="/Home/Index?categoryId=@category.Id">@category.Name</a>
                    </li>
                }
            </ul>
        </div>

        <!-- 导航链接 -->
        <div class="text-center mt-5">
            <a href="/Home/Privacy" class="me-3">隐私政策</a>
        </div>
    </div>
</body>
</html>