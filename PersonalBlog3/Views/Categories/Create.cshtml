@{
    ViewData["Title"] = "添加新分类";
}

<!-- 引入Bootstrap样式，和首页保持一致 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    .container { 
        max-width: 600px; 
        margin: 3rem auto; 
        padding: 2rem;
        border: 1px solid #eee;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    .form-group { margin-bottom: 1.5rem; }
    label { font-weight: 500; }
    .btn-group { margin-top: 1rem; }
</style>

<div class="container">
    <h3 class="mb-4">添加新分类</h3>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Name" class="form-label">分类名称</label>
            <input type="text" id="Name" name="Name" class="form-control" placeholder="请输入分类名称" required />
        </div>
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">添加</button>
            <!-- 添加返回首页按钮 -->
            <a href="/" class="btn btn-secondary ms-2">返回首页</a>
        </div>
    </form>
</div>