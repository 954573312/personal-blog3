@page
@model PersonalBlog3.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "添加分类 - 陈嵩源的个人博客";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { font-family: system-ui, -apple-system, sans-serif; }
        .container { 
            max-width: 500px; 
            margin: 5rem auto; 
            padding: 0 1rem;
        }
        .form-card {
            border: 1px solid #eee;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }
        .blog-title { 
            text-align: center; 
            margin-bottom: 20px; 
            color: #0d6efd;
        }
        footer { 
            text-align: center; 
            color: #666; 
            margin-top: 30px; 
            padding: 20px 0;
            border-top: 1px solid #eee;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-card">
            <h2 class="blog-title">添加文章分类</h2>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-danger text-center mb-3">@Model.Message</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">分类名称</label>
                    <input type="text" class="form-control" id="Name" 
                           name="Category.Name" required />
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">添加分类</button>
                    <a href="/" class="btn btn-secondary">返回首页</a>
                </div>
            </form>
        </div>

        <footer>
            <p>© 2025 陈嵩源的个人博客</p>
        </footer>
    </div>
</body>
</html>