@page "{id:int}"
@model PersonalBlog3.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "删除分类 - 陈嵩源的个人博客";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { font-family: system-ui, -apple-system, sans-serif; }
        .container { 
            max-width: 600px; 
            margin: 5rem auto; 
            padding: 0 20px;
        }
        .delete-card {
            border: 1px solid #eee;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }
        .blog-title { 
            text-align: center; 
            margin-bottom: 20px; 
            color: #0d6efd;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="delete-card">
            <h2 class="blog-title">删除分类确认</h2>

            <!-- 提示信息 -->
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-@Model.MessageType text-center mb-4">
                    @Model.Message
                </div>
            }

            <!-- 管理员且分类存在：显示删除确认 -->
            @if (string.IsNullOrEmpty(Model.Message) && Model.Category != null)
            {
                <div class="text-center mb-4">
                    <h4>确定要删除分类「@Model.Category.Name」吗？</h4>
                    <p class="text-danger">删除后，该分类下的文章可能无法正常显示！</p>
                </div>
                <form method="post">
                    <div class="d-flex gap-2 justify-content-center">
                        <button type="submit" class="btn btn-danger">确认删除</button>
                        <a href="/" class="btn btn-secondary">取消</a>
                    </div>
                </form>
            }
            else if (Model.Category == null && string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-warning text-center">分类不存在！</div>
                <div class="text-center">
                    <a href="/" class="btn btn-secondary">返回首页</a>
                </div>
            }
        </div>
    </div>
</body>
</html>