@page
@model PersonalBlog3.Pages.Posts.CreateModel
@{
    ViewData["Title"] = "发布新文章";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 陈嵩源的个人博客</title>
    <!-- 引入Bootstrap保证样式 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { font-family: system-ui, -apple-system, sans-serif; }
        .container { 
            max-width: 800px; 
            margin: 5rem auto; 
            padding: 0 20px;
        }
        .form-card {
            border: 1px solid #eee;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }
        .login-tip {
            text-align: center;
            padding: 20px;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-card">
            <h2 class="text-center mb-4">发布新文章</h2>

            <!-- 未登录提示（核心） -->
            @if (!string.IsNullOrEmpty(Model.LoginMessage))
            {
                <div class="login-tip text-warning">
                    @Model.LoginMessage
                    <br />
                    <a href="/Account/Login" class="btn btn-primary mt-3">立即登录</a>
                </div>
            }
            else
            {
                <!-- 已登录：显示发布表单 -->
                <form method="post">
                    <div class="mb-3">
                        <label for="Title" class="form-label">文章标题</label>
                        <input type="text" class="form-control" id="Title" 
                               name="Post.Title" required placeholder="请输入文章标题" />
                    </div>

                    <div class="mb-3">
                        <label for="CategoryId" class="form-label">文章分类</label>
                        <select class="form-select" id="CategoryId" 
                                name="Post.CategoryId" required>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="Content" class="form-label">文章内容</label>
                        <textarea class="form-control" id="Content" 
                                  name="Post.Content" rows="6" required 
                                  placeholder="请输入文章内容"></textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">发布文章</button>
                        <a href="/" class="btn btn-secondary">返回首页</a>
                    </div>
                </form>
            }
        </div>
    </div>
</body>
</html>