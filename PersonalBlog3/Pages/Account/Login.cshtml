@page
@model PersonalBlog3.Pages.Account.LoginModel
@{
    ViewData["Title"] = "登录 - 陈嵩源的个人博客";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { font-family: system-ui, -apple-system, sans-serif; }
        .container { 
            max-width: 500px; 
            margin: 5rem auto; 
            padding: 0 1rem;
        }
        .login-card {
            border: 1px solid #eee;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }
        .blog-title { 
            text-align: center; 
            margin-bottom: 20px; 
            color: #0d6efd;
        }
        .error-msg { 
            color: #dc3545; 
            text-align: center; 
            margin-bottom: 15px;
        }
        footer { 
            text-align: center; 
            color: #666; 
            margin-top: 30px; 
            padding: 20px 0;
            border-top: 1px solid #eee;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-card">
            <h2 class="blog-title">陈嵩源的个人博客 - 登录</h2>

            <!-- 登录失败提示 -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-msg">@Model.ErrorMessage</div>
            }

            <!-- 登录表单 -->
            <form method="post">
                <div class="mb-3">
                    <label for="Username" class="form-label">用户名</label>
                    <input type="text" class="form-control" id="Username" 
                           name="LoginUser.Username" required />
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">密码</label>
                    <input type="password" class="form-control" id="Password" 
                           name="LoginUser.Password" required />
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">登录</button>
                    <div class="text-center mt-2">
                        <span>还没有账号？</span>
                        <a href="/Account/Register" class="text-primary">立即注册</a>
                    </div>
                </div>
            </form>
        </div>

        <footer>
            <p>© 2025 陈嵩源的个人博客</p>
        </footer>
    </div>
</body>
</html>