@page "{id:int}"
@model PersonalBlog3.Pages.PostDetailModel
@{
    ViewData["Title"] = Model.Post?.Title ?? "文章详情";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 陈嵩源的个人博客</title>
    <!-- 重新引入Bootstrap（或替换为Tailwind） -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { 
            font-family: system-ui, -apple-system, sans-serif; 
            padding: 20px 0; /* 增加页面内边距 */
        }
        .container { 
            max-width: 800px; 
            margin: 0 auto; /* 页面居中 */
            padding: 0 20px;
        }
        .blog-header { 
            text-align: center; 
            padding: 30px 0; 
            border-bottom: 1px solid #eee; 
            margin-bottom: 30px;
        }
        .post-container {
            border: 1px solid #eee;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            margin-bottom: 30px;
        }
        .post-title { 
            font-size: 2rem; 
            margin-bottom: 15px; 
            color: #333;
        }
        .post-meta { 
            color: #666; 
            font-size: 0.95rem;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px dashed #eee;
        }
        .post-content { 
            line-height: 1.8; 
            font-size: 1.05rem;
            color: #333;
            margin-bottom: 20px;
        }
        footer { 
            text-align: center; 
            color: #666; 
            padding: 20px 0;
            border-top: 1px solid #eee;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="blog-header">
            <h1 class="blog-title">陈嵩源的个人博客</h1>
            <p class="blog-desc">记录技术成长，分享学习心得</p>
        </div>

        @if (Model.Post == null)
        {
            <div class="alert alert-warning text-center">
                <p>😞 文章不存在或已被删除</p>
                <a href="/" class="btn btn-secondary mt-2">返回首页</a>
            </div>
        }
        else
        {
            <div class="post-container">
                <h2 class="post-title">@Model.Post.Title</h2>
                <div class="post-meta">
                    分类：@Model.Post.Category?.Name | 作者：@Model.Post.Author | 发布时间：@Model.Post.CreatedTime.ToString("yyyy-MM-dd HH:mm")
                </div>
                <div class="post-content">
                    @Model.Post.Content
                </div>
                <a href="/" class="btn btn-secondary">返回首页</a>
            </div>
        }

        <footer>
            <p>© 2025 陈嵩源的个人博客</p>
        </footer>
    </div>
</body>
</html>