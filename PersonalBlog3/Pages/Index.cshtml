@page
@model PersonalBlog3.Pages.IndexModel
@{
    ViewData["Title"] = "陈嵩源的个人博客";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
        body { font-family: system-ui, -apple-system, sans-serif; }
        .container { max-width: 1000px; margin: 0 auto; padding: 0 1rem; }
        .auth-info { text-align: right; margin-top: 10px; }
        .nav-bar { margin: 10px 0; }
        .blog-header { 
            text-align: center; 
            padding: 30px 0; 
            border-bottom: 1px solid #eee; 
            margin-bottom: 20px;
        }
        .blog-title { font-size: 2.5rem; margin-bottom: 10px; }
        .blog-desc { color: #666; }
        .article-card { 
            border: 1px solid #eee; 
            padding: 20px; 
            margin-bottom: 20px; 
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }
        .category-bar { 
            background: #f8f9fa; 
            padding: 15px; 
            border-radius: 8px; 
            margin-bottom: 15px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }
        .category-bar h5 { 
            background: #0d6efd; 
            color: white; 
            padding: 10px 15px; 
            margin: -15px -15px 15px -15px;
            border-top-left-radius: 8px; 
            border-top-right-radius: 8px;
        }
        .add-category { 
            float: right; 
            font-size: 0.8rem; 
            color: white; 
            text-decoration: none;
        }
        .category-item { margin: 8px 0; display: flex; justify-content: space-between; align-items: center; }
        .category-item a { 
            text-decoration: none; 
            color: #333;
            padding: 4px 8px;
            border-radius: 4px;
            display: inline-block;
        }
        .category-item a:hover { background-color: #f0f7ff; }
        .category-item a.active { 
            color: white; 
            background-color: #0d6efd; 
            font-weight: 500;
        }
        .empty-tip { 
            padding: 30px; 
            text-align: center; 
            color: #666;
            border: 1px dashed #eee;
            border-radius: 8px;
            margin-top: 20px;
        }
        footer { 
            text-align: center; 
            color: #666; 
            margin-top: 50px; 
            padding: 20px 0;
            border-top: 1px solid #eee;
        }
        .delete-btn { background-color: #dc3545 !important; border-color: #dc3545 !important; }
        .category-delete-btn { 
            font-size: 0.7rem; 
            padding: 2px 6px; 
            background-color: #dc3545; 
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- 登录信息：替换为Razor语法访问Model -->
        <div class="auth-info">
            @if (Model.IsLoggedIn)
            {
                <span>欢迎，@Model.Username</span>
                @if (Model.IsAdmin)
                {
                    <span class="text-danger ms-2">(管理员)</span>
                }
                <a href="/Account/Logout" class="ms-3">退出登录</a>
            }
            else
            {
                <a href="/Account/Login" class="me-2">登录</a>
                <a href="/Account/Register">注册</a>
            }
        </div>

        <div class="nav-bar">
            <a href="/" class="me-3">首页</a>
            <a href="/Privacy" class="me-3">隐私政策</a>
        </div>

        <div class="blog-header">
            <h1 class="blog-title">陈嵩源的个人博客</h1>
            <p class="blog-desc">记录技术成长，分享学习心得</p>
        </div>

        <!-- 发布新文章按钮 -->
        <div style="text-align:center; margin-bottom:20px; position:relative; z-index:9999;">
            <button onclick="window.location.href='/Posts/Create';" class="btn btn-primary">发布新文章</button>
        </div>

        <div class="row">
            <div class="col-md-8">
                <!-- 动态标题：访问Model的CurrentCategoryName -->
                <h3 class="mb-4">@(Model.CurrentCategoryName != "最新文章" ? $"「{Model.CurrentCategoryName}」分类文章" : "最新文章")</h3>

                <!-- 无文章提示 -->
                @if (!Model.Posts.Any())
                {
                    <div class="empty-tip">
                        <p>😯 该分类下暂无文章</p>
                        <button onclick="window.location.href='/Posts/Create'" 
                                class="btn btn-sm btn-primary mt-2" 
                                style="cursor: pointer; z-index: 999;">
                            发布第一篇文章
                        </button>
                    </div>
                }
                else
                {
                    <!-- 循环渲染文章：遍历Model.Posts -->
                    @foreach (var post in Model.Posts)
                    {
                        <div class="article-card">
                            <h4>@post.Title</h4>
                            <p class="text-muted small">
                                分类：@post.Category?.Name | 作者：@post.Author | 发布时间：@post.CreatedTime.ToString("yyyy-MM-dd HH:mm")
                            </p>
                            <p>@post.Content</p>
                            <div>
                                <a href="/PostDetail/@post.Id" class="btn btn-danger btn-sm">阅读全文</a>
                                <!-- 管理员删除文章按钮：判断Model.IsAdmin -->
                                @if (Model.IsAdmin)
                                {
                                    <button onclick="deletePost(@post.Id)" class="btn btn-danger btn-sm ms-2 delete-btn">删除文章</button>
                                }
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="col-md-4">
                <div class="category-bar">
                    <h5>
                        文章分类
                        <a href="/Categories/Create" class="add-category">添加分类</a>
                    </h5>
                    <ul class="list-unstyled">
                        <!-- 全部文章：判断当前是否有categoryId参数 -->
                        <li class="category-item">
                            <a href="/" class="@(PageContext.HttpContext.Request.Query.ContainsKey("categoryId") ? "" : "active")">全部文章</a>
                        </li>
                        <!-- 循环渲染分类：遍历Model.Categories，添加删除按钮 -->
                        @foreach (var category in Model.Categories)
                        {
                            <li class="category-item">
                                <a href="/?categoryId=@category.Id" 
                                   class="@(PageContext.HttpContext.Request.Query["categoryId"].ToString() == category.Id.ToString() ? "active" : "")">
                                    @category.Name
                                </a>
                                <!-- 管理员删除分类按钮：判断Model.IsAdmin -->
                                @if (Model.IsAdmin)
                                {
                                    <button onclick="deleteCategory(@category.Id, '@category.Name')" class="category-delete-btn">删除</button>
                                }
                            </li>
                        }
                    </ul>
                </div>
                <div class="category-bar">
                    <h5>关于博客</h5>
                    <p>基于ASP.NET Core构建的个人博客系统</p>
                </div>
            </div>
        </div>

        <footer>
            <p>© 2025 陈嵩源的个人博客</p>
        </footer>
    </div>

    <!-- 删除文章/分类JS逻辑 -->
    <script>
        function deletePost(postId) {
            if (confirm('确定要删除这篇文章吗？删除后无法恢复！')) {
                window.location.href = '/DeletePost/' + postId;
            }
        }

        function deleteCategory(categoryId, categoryName) {
            if (confirm(`确定要删除分类「${categoryName}」吗？删除后该分类下的文章可能无法正常显示！`)) {
                window.location.href = '/Categories/Delete/' + categoryId;
            }
        }
    </script>
</body>
</html>