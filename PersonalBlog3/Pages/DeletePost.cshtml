@page "{id:int}"
@model PersonalBlog3.Pages.DeletePostModel
@{
    ViewData["Title"] = "删除文章";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="alert alert-@Model.MessageType text-center">
            <h4>@(Model.MessageType == "success" ? "操作成功" : Model.MessageType == "warning" ? "提示" : "错误")</h4>
            <p>@Model.Message</p>
        </div>
        <div class="text-center mt-3">
            <a href="/" class="btn btn-secondary">返回首页</a>
        </div>
    </div>
</body>
</html>